<renderpath>
    <rendertarget name="blurh" tag="DepthOfFieldMQ" sizedivisor="4 4" format="rgba" filter="true"/>
    <rendertarget name="blurv" tag="DepthOfFieldMQ" sizedivisor="4 4" format="rgba" filter="true"/>
    <rendertarget name="blurh" tag="DepthOfFieldHQ" sizedivisor="4 4" format="rgba" filter="true"/>
    <rendertarget name="blurv" tag="DepthOfFieldHQ" sizedivisor="4 4" format="rgba" filter="true"/>

    <rendertarget name="depthBlur" tag="DepthOfField" sizedivisor="1 1" format="r16" filter="true"/>
    <rendertarget name="framecopy" tag="DepthOfField" sizedivisor="1 1" format="rgba" filter="true"/>

    <command type="quad" tag="DepthOfField" vs="CopyFrameBufferDOF" ps="CopyFrameBufferDOF" blend="replace" output="depthBlur">
        <parameter name="SmoothFocusEnabled" value="false"/>
        <parameter name="SmoothFocus" value="0.1" />
        <parameter name="Focal" value="0.5" />
        <parameter name="FocalNear" value="2.0" />
        <parameter name="FocalFar" value="0.5" />

        <texture unit="diffuse" name="viewport" />
        <texture unit="normal" name="depth" />
    </command>
    <command type="quad" tag="DepthOfField" vs="Blur" ps="Blur" psdefines="BLUR5" output="blurh">
        <parameter name="BlurDir" value="1.0 0.0" />
        <parameter name="BlurRadius" value="1.0" />
        <parameter name="BlurSigma" value="3.0" />
        <texture unit="diffuse" name="viewport" />
    </command>
    <command type="quad" tag="DepthOfField" vs="Blur" ps="Blur" psdefines="BLUR5" output="blurv">
        <parameter name="BlurDir" value="0.0 1.0"/>
        <parameter name="BlurRadius" value="1.0"/>
        <parameter name="BlurSigma" value="3.0"/>
        <texture unit="diffuse" name="blurh"/>
    </command>
    <command type="qua" tag="DepthOfField" vs="Blur" ps="Blur" psdefines="BLUR3" output="blurh">
        <parameter name="BlurDir" value="1.0 0.0"/>
        <parameter name="BlurRadius" value="0.5"/>
        <parameter name="BlurSigma" value="2.0"/>
        <texture unit="diffuse" name="blurv" />
    </command>
    <command type="quad" tag="DepthOfField" vs="Blur" ps="Blur" psdefines="BLUR3" output="blurv">
        <parameter name="BlurDir" value="0.0 1.0"/>
        <parameter name="BlurRadius" value="0.5"/>
        <parameter name="BlurSigma" value="2.0"/>
        <texture unit="diffuse" name="blurh"/>
    </command>
    <command type="quad" tag="DepthOfField" vs="DepthOfField" ps="DepthOfField" blend="replace" output="framecopy">
        <texture unit="diffuse" name="viewport"/>
        <texture unit="normal" name="blurv"/>
        <texture unit="specular" name="depthBlur"/>
    </command>
    <command type="quad" tag="DepthOfField" vs="CopyFramebuffer" ps="CopyFramebuffer" blend="replace" output="viewport">
        <texture unit="diffuse" name="framecopy" />
    </command>
</renderpath>
